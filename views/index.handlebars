<div class="burger-container row d-flex justify-content-between m-5">
    <div class="col-3 burgers overflow-auto">
        {{#each burgers}}
        {{#unless devoured}}
        <div class="card py-2 my-3">
            <div class="card-body">
                <p class="card-title pb-2">{{this.burger_name}}</p>
                <button class="btn btn-primary" id="{{this.id}}"><i class="fas fa-hamburger"></i> DEVOUR <i
                        class="fas fa-hamburger"></i></button>
            </div>
        </div>
        {{/unless}}
        {{/each}}
    </div>
    <div class="col-3 burgers devoured overflow-auto">
        {{#each burgers}}
        {{#unless devoured}}
        <div class="card py-2 my-3">
            <div class="card-body">
                <p class="card-title">{{this.burger_name}}</p>
                <button class="btn btn-primary devoured-btn" id="{{this.id}} disabled">Monched and Gone</button>
            </div>
        </div>
        {{/unless}}
        {{/each}}
    </div>
</div>

<div class="row d-flex justify-content-center">
    <form class="col-5 d-flex align-items-end">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
</div>